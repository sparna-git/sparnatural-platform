{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SparnaturalQuery",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "distinct": { "type": "boolean" },

    "variables": {
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "#/definitions/VariableTerm" },
          { "$ref": "#/definitions/VariableExpression" }
        ]
      }
    },

    "order": {
      "type": "string",
      "enum": ["asc", "desc", "noord"]
    },

    "branches": {
      "type": "array",
      "items": { "$ref": "#/definitions/Branch" }
    },

    "limit": { "type": "integer" },

    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "lang": { "type": "string" },
        "label": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "description": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    }
  },

  "required": ["variables", "branches"],

  "definitions": {
    "Branch": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "line": { "$ref": "#/definitions/CriteriaLine" },
        "children": {
          "type": "array",
          "items": { "$ref": "#/definitions/Branch" }
        },
        "optional": { "type": "boolean" },
        "notExists": { "type": "boolean" }
      },
      "required": ["line", "children"]
    },

    "CriteriaLine": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "s": { "type": "string" },
        "p": { "type": "string" },
        "o": { "type": "string" },
        "sType": { "type": "string" },
        "oType": { "type": "string" },
        "criterias": {
          "type": "array",
          "items": { "$ref": "#/definitions/LabelledCriteria" }
        }
      },
      "required": ["s", "p", "o", "sType", "oType"]
    },

    "LabelledCriteria": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "label": { "type": "string" },
        "criteria": { "$ref": "#/definitions/Criteria" }
      },
      "required": ["label", "criteria"]
    },

    "Criteria": {
      "anyOf": [
        { "$ref": "#/definitions/RdfTermCriteria" },
        { "$ref": "#/definitions/DateCriteria" },
        { "$ref": "#/definitions/BooleanCriteria" },
        { "$ref": "#/definitions/MapCriteria" },
        { "$ref": "#/definitions/NumberCriteria" },
        { "$ref": "#/definitions/SearchCriteria" }
      ]
    },

    "RdfTermCriteria": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "rdfTerm": { "$ref": "#/definitions/RDFTerm" }
      },
      "required": ["rdfTerm"]
    },

    "DateCriteria": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "start": {
          "anyOf": [{ "type": "string" }, { "type": "null" }]
        },
        "stop": {
          "anyOf": [{ "type": "string" }, { "type": "null" }]
        }
      }
    },

    "BooleanCriteria": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "boolean": { "type": "boolean" }
      },
      "required": ["boolean"]
    },

    "MapCriteria": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "coordType": { "enum": ["Polygon", "Rectangle"] },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "array",
            "items": { "$ref": "#/definitions/LatLng" }
          }
        }
      },
      "required": ["coordType", "coordinates"]
    },

    "NumberCriteria": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "min": {
          "anyOf": [{ "type": "number" }, { "type": "null" }]
        },
        "max": {
          "anyOf": [{ "type": "number" }, { "type": "null" }]
        }
      }
    },

    "SearchCriteria": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "search": { "type": "string" }
      },
      "required": ["search"]
    },

    "LatLng": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "lat": { "type": "number" },
        "lng": { "type": "number" },
        "alt": {
          "anyOf": [{ "type": "number" }, { "type": "null" }]
        }
      },
      "required": ["lat", "lng"]
    },

    "RDFTerm": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "enum": ["literal", "uri", "bnode"] },
        "value": { "type": "string" },
        "xml_lang": { "type": "string" },
        "datatype": { "type": "string" }
      },
      "required": ["type", "value"]
    },

    "VariableTerm": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "termType": { "const": "Variable" },
        "value": { "type": "string" }
      },
      "required": ["termType", "value"]
    },

    "VariableExpression": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "expression": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": { "const": "aggregate" },
            "aggregation": { "type": "string" },
            "distinct": { "type": "boolean" },
            "expression": { "$ref": "#/definitions/VariableTerm" }
          },
          "required": ["type", "aggregation", "distinct", "expression"]
        },
        "variable": { "$ref": "#/definitions/VariableTerm" }
      },
      "required": ["expression", "variable"]
    }
  }
}
